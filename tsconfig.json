{
    "compilerOptions": {
        "target": "ES5",
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strict": true,
        "outDir": "./dist",
        "allowJs": false
    },
    "compileOnSave": true,
    "include": [
        "./src/cli",
        "./src/lib"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}